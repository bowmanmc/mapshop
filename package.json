{
  "name": "mapshop",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^15.6.0",
    "react-dom": "^15.6.0",
    "redux": "^3.7.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-jest": "^20.0.3",
    "babel-preset-react": "^6.24.1",
    "cssnano": "^3.10.0",
    "electron-connect": "^0.6.1",
    "electron-prebuilt-compile": "^1.6.11",
    "enzyme": "^2.9.0",
    "jest": "^20.0.4",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "normalize.css": "^7.0.0",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^4.1.0",
    "react-test-renderer": "^15.6.1",
    "redux-immutable-state-invariant": "^2.0.0",
    "sass-lint": "^1.10.2"
  },
  "main": "application.js",
  "scripts": {
    "start": "npm-run-all dev",
    "electron": "electron .",
    "dev": "npm-run-all --parallel electron watch",
    "watch": "npm-run-all --parallel watch:sass watch:test",
    "lint:sass": "sass-lint -c sass-lint.config.yml -v",
    "presass": "npm-run-all lint:sass",
    "sass": "node-sass --source-map true --include-path ./app --include-path node_modules ./app/index.scss ./app/styles/bundle.css",
    "postsass": "postcss app/styles/bundle.css -c postcss.config.js -o app/styles/bundle.min.css",
    "test": "jest",
    "watch:sass": "nodemon -e scss -w app -x \"npm run sass\"",
    "watch:test": "nodemon -e js -w app -x \"npm run test\""
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "app/**/*.{js,jsx}",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "html",
      "text-summary"
    ],
    "testMatch": [
      "<rootDir>/app/**/__tests__/**/*.js?(x)",
      "<rootDir>/app/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ]
  }
}
